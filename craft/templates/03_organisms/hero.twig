{% set hero = craft.entries.section('hero').one() %}

<div class="hero section  js-hero ">
    <div class="hero__inner hero__inner--left section__inner section__inner--right"></div>
    <div class="hero__inner hero__inner--center section__inner section__inner--center">
        <div class="desktop-navigation__background background">
        <img class="background__image" src="{{ hero.heroImage.one().url() }}" alt="{{ hero.heroImage.one().alt }}">
        <div class="background__overlay"></div>
        </div>
        <img class="hero__symbol" src="/media/graphics/logos/logo-kr-consulting-symbol-dark.svg" alt="KR Consulting Logo Symbol"></figure>
        <div class="hero__content content">
					{{ hero.heroHeading }}
					<a class="button content__button  button--white" href="{{ hero.heroButtonHref }}">
					<span class="button__text">{{ hero.heroButtonText }} </span>
					<i class="button__icon icon icon--arrow"></i>
					<figure class="button__overlay"></figure>
            </a>
        </div>
    </div>
    <div class="hero__inner hero__inner--right section__inner section__inner--left"></div>
</div>